@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li><a asp-action="Index" asp-controller="RoleManager">Role Manager</a></li>
                <li class="active">Edit</li>
            </ul>
        </div>
    </div>
</div>

<div class="page-container">
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="container">
                <div class="page-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet light ">
                                <div class="portlet-title">
                                    <div class="caption font-dark">
                                        <i class="icon-settings font-dark"></i>

                                    </div>
                                    <div class="actions">
                                        <div class="btn-group btn-group">
                                            <a class="btn btn-primary" style="with:auto" asp-controller="RoleManager" asp-action="Create">Add new role </a>

                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-6">

                                        <form method="post" class="mt-3">
                                            <div class="form-group row">
                                                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                                                <div class="col-sm-10">
                                                    <input asp-for="Id" disabled class="form-control" />
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                                                <div class="col-sm-10">
                                                    <input asp-for="RoleName" class="form-control" />
                                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div asp-validation-summary="All" class="text-danger"></div>

                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    <button type="submit" class="btn btn-success">Update</button>
                                                    <a asp-action="Index" asp-controller="RoleManager" class="btn btn-success">Cancel</a>
                                                </div>
                                            </div>

                                            <div class="card">
                                                <div class="card-header">
                                                    <h3 class="black">Users in this role</h3>
                                                </div>
                                                <div class="card-body">
                                                    @if (Model.Users.Any())
                                                    {
                                                        foreach (var user in Model.Users)
                                                        {
                                                            <h5 class="card-title black">@user</h5>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <h5 class="card-title black">None at the moment</h5>
                                                    }
                                                </div>
                                                <div class="card-footer">
                                                    <a asp-action="EditUsersInRole" asp-controller="RoleManager" 
                                                    asp-route-roleId="@Model.Id" class="btn btn-success" style="with:auto">Add or remove users</a>
                                                </div>
                                            </div>

                                        </form>



                                    </div>

                                </div>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
