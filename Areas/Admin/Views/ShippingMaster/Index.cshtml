@model IEnumerable<ShippingMaster>

@{   
    ViewData["Title"] = "Shipping Master";
    ViewData["PageTitle"] = "Shipping Master";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="panel panel-bd ">
            <div class="row">
                <div class="col-md-6">                    
                    <h3 class="text-uppercase" style="padding: 0px 20px;">
                        <i class="fa fa-cog"></i>
                        Shipping Master
                    </h3>
                </div>
                <div class="col-md-5">                    
                    @Html.ActionLink("Add New", "Create", null, new { Area = "Admin" }, new{ @class = "btn btn-primary", @Title="Create New", @style="margin: 15px 85%;" })
                </div>
            </div>
            <hr/>
            <div class="panel-body">                
                <div class="table-scrolled"> 
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <table class="example display table table-hover dataTable" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Sr No</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pincode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MinAmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShippingCharge)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EffectiveDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>            
                                
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Select((x, i) => new
                                                                {
                                                                    Data = x,
                                                                    Index = i +
                                                                    1
                                                                }))
                            {
                                <tr>
                                    <td>@item.Index</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data.Pincode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data.MinAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data.ShippingCharge)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data.EffectiveDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data.IsActive)
                                    </td>
                                    <td>
                                        

                                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Data.Id" class="btn btn-add btn-sm" title="Edit Record">
                                            <i class="fa fa-pencil"></i>
                                        </a> |
                                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Data.Id" class="btn btn-primary btn-sm" title="View Details">
                                            <i class="fa fa-info-circle"></i>
                                        </a> |
                                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.Data.Id" class="btn btn-danger btn-sm" title="Delete Record"
                                            onclick="return DeleteConfirm();">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $(".Master").addClass("active");
        });
    </script>
}
