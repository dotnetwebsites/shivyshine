@model IEnumerable<MyOrderAssortsView>

@{
    ViewData["Title"] = "Order Details";
    ViewData["PageTitle"] = "Order Details";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="panel panel-bd ">
            <div class="row">
                <div class="col-md-6">                    
                    <h3 class="text-uppercase" style="padding: 0px 20px;">
                        <i class="fa fa-cog"></i>
                        Order Details
                    </h3>
                </div>
                <div class="col-md-5">                    
                    <a style="margin: 15px 85%;" class="btn btn-primary" asp-area="Admin" asp-controller="CustomerOrders" asp-action="Index">Back</a>                    
                </div>
            </div>
            <hr/>
            <div class="panel-body">                
                <div class="table-scrolled">                                        
                    <table class="table table-hover table-responsive table-bordered table-content">
                        <thead>
                            <tr>
                                <th>Product Image</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="@item.ProdImgUrl" height="100" width="100" /></td>
                                    <td><label>@item.ProductName</label></td>
                                    <td><label>@item.Quantity</label></td>
                                    <td><label><i class="fa fa-inr"></i> @item.Price.ToString("#,##0.00")</label></td>
                                </tr>
                            }
                            <tr>
                                <td colspan="3"><label>Grand Total</label></td>
                                <td><label><i class="fa fa-inr"></i> @Model.Sum(p=>p.Price).ToString("#,##0.00")</label></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
