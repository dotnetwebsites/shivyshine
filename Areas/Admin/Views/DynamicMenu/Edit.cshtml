@model DynamicMenu

@{   
    ViewData["Title"] = "Edit";
    ViewData["PageTitle"] = "Edit";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="panel panel-bd ">
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.MenuName)
                        @Html.EditorFor(model => model.MenuName, new { htmlAttributes = new { @class = "form-control", @placeholder="Menu name" } })
                        @Html.ValidationMessageFor(model => model.MenuName, "", new { @class = "text-danger" })                                    
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.ParentId)
                        @Html.DropDownList("ParentId", null, "--Select Parent Menu--", htmlAttributes: new { @class = "form-control select2" })
                        @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Area)
                        @Html.DropDownList("Area", null, "--Select Area--", htmlAttributes: new { @class = "form-control select2" })
                        @Html.ValidationMessageFor(model => model.Area, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.MenuUrl)
                        @Html.EditorFor(model => model.MenuUrl, new { htmlAttributes = new { @class = "form-control", @placeholder="Menu URL" } })
                        @Html.ValidationMessageFor(model => model.MenuUrl, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.MenuOrder)
                        @Html.EditorFor(model => model.MenuOrder, new { htmlAttributes = new { @class = "form-control", @placeholder="Menu order" } })
                        @Html.ValidationMessageFor(model => model.MenuOrder, "", new { @class = "text-danger" })                                    
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.MenuIcon)
                        @Html.EditorFor(model => model.MenuIcon, new { htmlAttributes = new { @class = "form-control", @placeholder="Menu order" } })
                        @Html.ValidationMessageFor(model => model.MenuIcon, "", new { @class = "text-danger" })                                    
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.IsActive)
                        @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })                                    
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.IsAuth)
                        @Html.CheckBoxFor(model => model.IsAuth, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsAuth, "", new { @class = "text-danger" })                                    
                    </div>

                    <div class="form-group col-md-12">
                        <a asp-area="Admin" asp-action="Index" class="btn btn-info">Back</a>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
