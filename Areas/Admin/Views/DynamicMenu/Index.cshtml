@model IEnumerable<DynamicMenuView>

@{   
    ViewData["Title"] = "Dynamic Menu";
    ViewData["PageTitle"] = "Dynamic Menu";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="panel panel-bd ">
            <div class="row">
                <div class="col-md-6">                    
                    <h3 class="text-uppercase" style="padding: 0px 20px;">
                        <i class="fa fa-cog"></i>
                        Dynamic Menu
                    </h3>
                </div>
                <div class="col-md-5">                    
                    @Html.ActionLink("Add New", "Create", "DynamicMenu", new { Area = "Admin" }, new{ @class = "btn btn-primary", @Title="Create New", @style="margin: 15px 85%;" })
                </div>
            </div>
            <hr/>
            <div class="panel-body">                
                <div class="table-scrolled">                                        
                    <table class="example display table table-hover dataTable" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Sr No</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MenuName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ParentId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MenuOrder)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MenuIcon)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Select((x, i) => new
                                                                {
                                                                    Data = x,
                                                                    Index = i +
                                                                    1
                                                                }))
                            {
                                <tr>
                                    <td>@item.Index</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data.MenuName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data.ParentMenuName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data.MenuOrder)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data.MenuIcon)
                                    </td>
                                    <td>
                                        @if(!item.Data.IsActive){
                                            <span class="label label-sm label-success"> Active </span>
                                        }
                                        else
                                        {
                                            <span class="label label-sm label-danger"> Blocked </span>
                                        }                                                                                                                    
                                    </td>
                                    <td>
                                        

                                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Data.Id" class="btn btn-add btn-sm" title="Edit Record">
                                            <i class="fa fa-pencil"></i>
                                        </a> |
                                        <a asp-area="Admin" asp-action="Details" asp-route-id="@item.Data.Id" class="btn btn-primary btn-sm" title="View Details">
                                            <i class="fa fa-info-circle"></i>
                                        </a> |
                                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.Data.Id" class="btn btn-danger btn-sm" title="Delete Record"
                                            onclick="return DeleteConfirm();">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="page-container">
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="container">
                <div class="page-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet light ">
                                <div class="portlet-title">   
                                    
                                    <div class="actions">
                                        <div class="btn-group btn-group">
                                            
                                        </div>
                                    </div>
                                    
                                </div>
                                
                                <div>
                                    
                                </div>
                                <div class="portlet-body">
                                    

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
