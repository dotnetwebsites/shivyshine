@page
@model ChangePasswordModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="wrap-breadcrumb">
    <ul>
        <li class="item-link"><a asp-action="Index" asp-controller="Home" asp-area="" class="link">home</a></li>
        <li class="item-link"><span>Change Password</span></li>
    </ul>
</div>

<div class="row">

    <div class=" main-content-area">
        <div class="wrap-login-item ">
            <div class="col-lg-8 col-sm-8 col-md-8 col-xs-12 col-lg-offset-3">
                <!-- login form -->
                <div class="login-form form-item ">
                    <form id="account" method="post">
                        <partial name="_StatusMessage" for="StatusMessage" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group wrap-title col-md-8">                       
                            <h3 class="form-title">Change Password</h3>
                        </div>                        
                        
                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.OldPassword"></label>
                            <input asp-for="Input.OldPassword" class="form-control" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.NewPassword"></label>
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <button type="submit" class="btn btn-primary">Update password</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <!--end main products area-->

</div>
<!--end row-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />    
}
