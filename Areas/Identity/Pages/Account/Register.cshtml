@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";    
}

<div class="wrap-breadcrumb">
    <ul>
        <li class="item-link"><a asp-action="Index" asp-controller="Home" asp-area="" class="link">home</a></li>
        <li class="item-link"><span>Register</span></li>
    </ul>
</div>

<div class="row">

    <div class=" main-content-area">
        <div class="wrap-login-item ">
            <div class="col-lg-8 col-sm-8 col-md-8 col-xs-12 col-lg-offset-3">
                <!-- login form -->
                <div class="login-form form-item ">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group wrap-title col-md-8">                       
                            <h3 class="form-title">Sign up your account</h3>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.Firstname"></label>
                            <input asp-for="Input.Firstname" class="form-control" placeholder="Firstname"/>
                            <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.Lastname"></label>
                            <input asp-for="Input.Lastname" class="form-control" placeholder="Lastname"/>
                            <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.Username"></label>
                            <input asp-for="Input.Username" class="form-control" placeholder="Username"/>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Mobile No"/>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.DateOfBirth"></label>
                            <input asp-for="Input.DateOfBirth" class="form-control" placeholder="Date of Birth"/>
                            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.Gender"></label>
                            <input asp-for="Input.Gender" type="radio" value="true" id="MaleGender"/> <label for="MaleGender">Male</label>
                            <input asp-for="Input.Gender" type="radio" value="false" id="FemaleGender"/> <label for="FemaleGender">Female</label>
                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Password"/>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group wrap-input col-md-8">
                            <input type="submit" class="btn btn-submit" value="Register" name="submit">
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <!--end main products area-->

</div>
<!--end row-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

